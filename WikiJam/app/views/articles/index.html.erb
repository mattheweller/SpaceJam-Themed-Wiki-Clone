<% if @articles.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% else %>
	<a href="articles/new">new article</a>
	<%= @category.name %>
	<% @articles.each do | article | %>
		<a href="category_article_path"><%= article.article_title %></a>
	<% end %>
<% end %>



